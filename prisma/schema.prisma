generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Alumno {
  id                  Int      @id @default(autoincrement())
  nombre              String
  apellido            String
  dni                 Int      @unique
  telefono            Int
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @updatedAt
}
